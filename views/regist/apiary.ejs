<!-- script -->
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script type="text/javascript">

    function submitfn(){
        let joindata = {
            "NAME":    document.getElementById('NAME').value,
            "ADDR":     document.getElementById('ADDR').value,
            };
            $.ajax({
                contentType: "application/json; charset=utf-8",
                url : "/api/write/apiary",
                type : 'POST', 
                dataType:'json',
                data : JSON.stringify(joindata), 
                success : function(response) {                    
                    if(response.result){
                        Swal.fire({              
                            position: 'top',
                            icon: 'success',
                            title: "양봉장 등록",
                            text: "새로운 양봉장을 등록하였습니다.",
                            showConfirmButton: false,                                    
                            timer: 1500
                        })
                        .then((result) => {                       
                            window.location.href = "/";
                        })     
                    }
                }, // success 
                error : function(xhr, status) {
                    alert(xhr + " : " + status);
                    console.log(xhr);
                }            
            }); // $.ajax 
    }

</script>
<!-- Main -->
<div id="main" class="alt">

    <div class="inner">
 
        <hr class="major" />
        <!-- Form -->
        <h3>양 봉 장 등 록</h3>

        <form method="post" action="#">
            <div class="row gtr-uniform">
                <div class="col-12">
                    <input type="text" name="NAME" id="NAME" value="" maxlength='5' placeholder="양봉장 이름" />
                </div>
                <div class="col-12">
                    <input type="text" name="ADDR" id="ADDR" value="" maxlength='5' placeholder="양봉장 주소" />
                </div>
                <!-- Break -->
                <br><br><br><br>
                <div class="col-12">
                    <input type="button" value="양 봉 장 등 록" style="width: 100%; height: 100px; " onclick="submitfn(); return false;">
                </div>
            </div>
        </form>
    </div>
</div>
